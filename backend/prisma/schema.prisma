generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kezeles {
  id          Int      @id @default(autoincrement())
  cim         String
  slug        String   @unique
  tartalom    String
  ar          String?
  kepUrl      String?
  letrehozva  DateTime @default(now())
  modositva   DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String   // bcrypt hash formában tárolva
  createdAt DateTime @default(now())
}


model Kep {
  id          Int      @id @default(autoincrement())
  url         String
  cim         String?
  letrehozva  DateTime @default(now())
}
